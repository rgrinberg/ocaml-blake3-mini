(foreign_library
 (archive_name blake3)
 (language c)
 (flags -O2)
 (names blake3 blake3_portable blake3_dispatch)
 (extra_objects blake3_avx2 blake3_avx512 blake3_sse2 blake3_sse41))

(rule
 (deps blake3_avx2.c)
 (targets blake3_avx2.o)
 (action
  (run %{cc} -mavx2 -c %{deps} -o %{targets})))

(rule
 (deps blake3_avx512.c)
 (targets blake3_avx512.o)
 (action
  (run %{cc} -mavx512f -mavx512vl -c %{deps} -o %{targets})))

(rule
 (deps blake3_sse2.c)
 (targets blake3_sse2.o)
 (action
  (run %{cc} -msse2 -c %{deps} -o %{targets})))

(rule
 (deps blake3_sse41.c)
 (targets blake3_sse41.o)
 (action
  (run %{cc} -msse4.1 -c %{deps} -o %{targets})))
